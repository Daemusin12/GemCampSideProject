<%= link_to 'All', lottery_path %>
<% Category.all.each do | category | %>
  <%= link_to category.name, lottery_path(category: category.name) %>
<% end %>

<table class="table table-striped table-hover">
  <thead>
  <td>Category</td>
  <td>Image</td>
  <td>Name</td>
  <td>State</td>
  <td>Status</td>
  </thead>
  <% @items.each do |item| %>
    <tr>
      <td><%= item.categories.pluck(:name).join(',') %></td>
      <td><%= image_tag item.image.url if item.image.present? %></td>
      <td><%= item.name %></td>
      <td><%= item.state %></td>
      <td><%= item.status%></td>
    </tr>
  <% end %>
</table>
