<table class="table table-striped table-hover">
  <thead>
  <td>Image</td>
  <td>Name</td>
  <td>Quantity</td>
  <td>Minimum Bets</td>
  <td>State</td>
  <td>Batch Count</td>
  <td>Online At</td>
  <td>Offline At</td>
  <td>Start At</td>
  <td>Status</td>
  </thead>
<tr>
  <td><%= image_tag @item.image.url if @item.image.present? %></td>
  <td><%= @item.name %></td>
  <td><%= @item.quantity %></td>
  <td><%= @item.minimum_bets %></td>
  <td><%= @item.state %></td>
  <td><%= @item.batch_count %></td>
  <td><%= @item.online_at%></td>
  <td><%= @item.offline_at%></td>
  <td><%= @item.start_at%></td>
  <td><%= @item.status%></td>
</tr>
</table>